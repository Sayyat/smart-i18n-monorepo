{
  "name": "@sayyyat/smart-i18next-cli",
  "version": "1.0.1",
  "description": "Next-generation CLI plugin for i18next-cli, enabling smart auto-translation and type generation in monorepos.",
  "bin": {
    "smart-i18next-cli": "./dist/cli.mjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "engines": {
    "node": ">=20"
  },
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build --watch",
    "test": "pnpm vitest run"
  },
  "keywords": [
    "i18n",
    "i18next",
    "cli-plugin",
    "typescript",
    "translation"
  ],
  "files": [
    "dist",
    "src/templates",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sayyat/smart-i18n-monorepo.git",
    "directory": "packages/smart-i18next-cli"
  },
  "author": "Sayat Raykul",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "dotenv": "^17.2.3",
    "glob": "^11.0.3",
    "jiti": "^2.6.1",
    "minimatch": "^10.1.1",
    "node-fetch": "^3.3.2"
  },
  "peerDependencies": {
    "i18next": ">=23.0.0",
    "i18next-cli": "^1.23.5"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/node": "^20.19.25",
    "@types/node-fetch": "^2.6.11",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "i18next-cli": "^1.24.20",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.12"
  }
}
